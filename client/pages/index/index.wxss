/**index.wxss**/
page {
    justify-content: space-between;
    background: #efefef;
    padding: 25rpx 0;
    box-sizing: border-box;
}

.plan-item {
    float: left;
    position: relative;
    width: 45%;
    height: 400rpx;
    margin-left: 3.333%;
    background-color: #ffffff;
    border-radius: 5px 5px;
}

.plan-item-img {
    position: absolute;
    top: 0;
    display: block;
    width: 100%;
    height: 200rpx;
}