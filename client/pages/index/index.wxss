/**index.wxss**/
page {
    background: #ececec;
    word-break: break-all;
}

/* 切换tab */

.choose-tab-container {
    overflow: hidden;
}

.choose-tab-container .choose-tab {
    float: left;
    width: 20%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 25rpx 0 0 4%;
    background: linear-gradient(to right, #3456c1, #1e79ad);
    color: #ffffff;
    text-align: center;
    font-size: 27rpx;
    border-radius: 5px;
}

/* 计划列表 */

.plan-list-container {
    overflow: hidden;
    padding: 25rpx;
    box-sizing: border-box;
}

.plan-list-container .plan-item {
    position: relative;
    overflow: hidden;
    float: left;
    width: 100%;
    height: 250rpx;
    margin-bottom: 25rpx;
    background-color: #ffffff;
    border-radius: 3px 3px;
}

.plan-item .plan-img {
    width: 40%;
    max-width: 250rpx;
}

.plan-item .plan-info {
    float: right;
    box-sizing: border-box;
    width: 60%;
    padding-right: 20rpx;
}

.plan-info .plan-title {
    position: relative;
    display: block;
    width: 100%;
    height: 75rpx;
    line-height: 75rpx;
    border-bottom: 1px solid #ececec;
    font-size: 30rpx;
}

.plan-title .amount {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    font-size: 20rpx;
    height: 35rpx;
    line-height: 35rpx;
    padding: 0 10rpx;
    margin: auto 0;
    background-color: #f53d6b;
    color: #ffffff;
    border-radius: 3px 3px;
}

.plan-info .plan-host {
    display: block;
    overflow: hidden;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 25rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.plan-info .plan-detail {
    display: block;
    overflow: hidden;
    width: 100%;
    height: 115rpx;
    font-size: 25rpx;
}