<!--index.wxml-->
<view>

    <button open-type="getUserInfo">登录·请求微信授权</button>

    <view class="choose-tab-container">
        <view wx:for="{{chooseTabs}}" wx:key="{{index}}" class="choose-tab">
            <text class="tab-text">{{item.text}}</text>
        </view>
    </view>

    <view class="plan-list-container">
        <view wx:for="{{activities}}" wx:key="{{index}}" class="plan-item">
            <image class="plan-img" src="{{item.img}}" />
            <view class="plan-info">
                <text class="plan-title bold">{{
                    item.title
                }}<text class="amount">{{
                    item.amount
                }}</text></text>
                <text class="plan-host">
                    <text class="bold">举办人 : </text>{{item.host}}
                </text>
                <text class="plan-detail">{{item.detail}}</text>
            </view>
        </view>
    </view>
</view>
