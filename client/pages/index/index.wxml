<view class="home-container">
    <view
        bindtap="onClickGotoSelectArea"
        class="flex-complete-middle area-select-bar"
    >
        <text class="text">{{ selectedArea.name }}榜单</text>
        <wux-icon type="md-arrow-dropdown" />
    </view>

    <!-- 标签列表 -->
    <view
        wx:if="{{ allTagList.length > 0 }}"
        class="tag-container"
    >
        <view class="main-tag-list">
            <view
                wx:for="{{ mainTagList }}"
                wx:for-item="item"
                wx:for-index="index"
                wx:key="item.id"
                data-id="{{ item.id }}"
                class="tag-item active"
            >{{ item.name }}</view>
        </view>
        <view
            bindtap="onToggleSelectTagDialog"
            class="flex-complete-middle view-more-container"
        >
            <text class="text">查看更多</text>
            <wux-icon type="ios-arrow-down" />
        </view>
    </view>

    <!-- 景点列表 -->
    <scroll-view class="place-list">
        <view
            wx:for="{{ placeList }}"
            wx:for-item="item"
            wx:for-index="index"
            wx:key="item.id"
            data-id="{{ item.id }}"
            class="place-item"
        >
            <image
                class="image"
                src="{{ item.img }}"
            />
            <text class="title">{{ item.title }}</text>
            <view class="praise-container">
                <text class="amount">{{ item.praise }}</text>
                <wux-icon type="md-thumbs-up" />
            </view>
        </view>
    </scroll-view>

    <wux-popup
        closable
        visible="{{ ifShowSelectTag }}"
        title="全部标签"
        bind:close="onToggleSelectTagDialog"
    >
        <view class="all-tag-list">
            <view
                wx:for="{{ allTagList }}"
                wx:for-item="item"
                wx:for-index="index"
                wx:key="item.id"
                data-id="{{ item.id }}"
                class="tag-item"
            >{{ item.name }}</view>
        </view>
    </wux-popup>

    <wux-toast id="wux-toast" />
    <wux-dialog id="wux-dialog" />
</view>
