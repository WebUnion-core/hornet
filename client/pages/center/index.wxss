/* pages/center/index.wxss */
page {
    background: #f0f0f0;
    width: 100%;
    height: 100%;
}

/* 用户信息板 */
.user-board-container {
    position: relative;
    height: 300rpx;
    background-color: #3456c1;
}

.user-board-container .user-avator {
    position: absolute;
    top: -80rpx;
    bottom: 0;
    left: 0;
    right: 0;
    width: 130rpx;
    height: 130rpx;
    margin: auto;
    background-color: #ffffff;
    border-radius: 65rpx;
}

.user-board-container .user-name {
    position: absolute;
    top: 50%;
    display: block;
    text-align: center;
    width: 100%;
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #ffffff;
}

/* 记录列表 */
.record-list {
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
}

.record-list .record-item {
    float: left;
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    padding: 0 25rpx;
    line-height: 80rpx;
    font-size: 25rpx;
    color: #acacac;
}

/* 功能列表 */
.func-list {
    width: 100%;
    margin: 15rpx 0;
    font-size: 30rpx;
    background-color: #ffffff;
}

.func-list .func-item {
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 25rpx;
    margin: 0 auto;
}