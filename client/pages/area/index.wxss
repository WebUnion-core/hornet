/* pages/area/index.wxss */

.area-container {
    box-sizing: border-box;
    padding-top: 100rpx;
}

.search-bar {
    position: fixed;
    top: 0;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    border-bottom: 1px solid #ffcc0b;
    background-color: #ffffff;
}

.search-bar:after {
    display: block;
    content: "";
    clear: both;
}

.search-bar .wux-input {
    float: left;
    box-sizing: border-box;
    width: 90%;
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    background-color: #dcdcdc;
}

.search-bar .icon-search {
    right: 10rpx;
    width: 10%;
    text-align: center;
}

.area-fieldset,
.all-area-fieldset {
    box-sizing: border-box;
    width: 100%;
    padding: 30rpx 20rpx 0;
    font-size: 32rpx;
}

.area-fieldset .title,
.all-area-fieldset .title {
    padding-bottom: 30rpx;
}

.area-fieldset .area-list {
    width: 100%;
}

.area-fieldset .area-list .area-item {
    display: inline-block;
    padding: 15rpx 60rpx;
    margin: 0 20rpx 30rpx 0;
    background-color: #dcdcdc;
}

.all-area-fieldset .area-list {
    width: 100%;
    border-top: 1px solid #dcdcdc;
}

.all-area-fieldset .area-list .area-item {
    margin-left: 32rpx;
    padding: 25rpx 10rpx;
    border-bottom: 1px solid #dcdcdc;
}
