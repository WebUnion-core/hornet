/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.bold {
    font-weight: 700;
}
.right {
    float: right;
}
.bottom-border {
    border-bottom: 1px solid #dcdcdc;
}
.red {
    color: #c90738;
}
.white {
    color: #ffffff;
}
.bg-red {
    background-color: #c90738;
}
.text-center {
    text-align: center;
}
.hide {
    display: none;
}
.show {
    display: initial;
}

/* toast */
.toast {
    position: fixed;
    bottom: 50rpx;
    left: 50%;
    margin: 0 auto;
    background-color: rgba(0,0,0,0.75);
    color: #ffffff;
    font-size: 28rpx;
    line-height: 36rpx;
    padding: 15rpx 28rpx;
    transform: translateX(-50%);
    border-radius: 28rpx 28rpx;
    text-align: center;
}

/* dialog */
.dialog-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.75);
}
.dialog-container .dialog-body {
    overflow: hidden;
    position: absolute;
    left: 0;
    right: 0;
    width: 60%;
    margin: 50% auto 0;
    background-color: #ffffff;
    transform: translateY(-25%);
}
.dialog-body .dialog-title {
    width: 100%;
    height: 85rpx;
    line-height: 85rpx;
    margin: 0 auto;
    font-size: 30rpx;
    border-bottom: 1px solid #dcdcdc;
}
.dialog-body .dialog-cont {
    width: 100%;
    padding: 60rpx 0;
    margin: 0 auto;
    font-size: 28rpx;
}
.dialog-body .dialog-btn {
    font-size: 30rpx;
    padding: 10rpx 0;
    background-color: #3456c1;
    color: #ffffff;
    border: 0;
    border-radius: 0;
}